# 環境変数設定例
# 本番環境では.env.localファイルを作成してこれらの値を設定してください

# GitHub Settings
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=h4mmerjp/oral-function-firebase

# API Configuration
NODE_ENV=production
API_BASE_URL=https://your-domain.vercel.app

# Rate Limiting (本番では Redis等の外部ストレージを使用)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Security Settings
CORS_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com
WEBHOOK_SECRET=your-webhook-secret-key

# Logging (本番ではCloudWatch, Datadog等を使用)
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true